<div class="container mt-5">
  <div class="row">

    <div class="col-md-3">
      <%= render 'genre-search' %>
    </div>

    <div class="col-md-9">
     <div class="mt-4 text-center">
      <%= image_tag @item.get_image(550,550) %>
     </div>
     <div class="ml-5 mt-5 text-center">
       <h4><%= @item.name %></h4><br />
       <h5><%= @item.introduction %></h5>
       <h4>¥<%= @item.add_tax_price.to_s(:delimited) %><span class="text-muted small"> (税込)</span></h4>
     </div>
     <div class="text-center mt-5 pb-5">
       <% if @item.is_active == TRUE %>
        <%= form_with(model: @cart_item, url: cart_items_path, method: :post, local: true) do |f| %>
         <%= f.label :amount, "個数選択" %>
         <%= f.select :amount, *[1..10] %>
         <%= f.hidden_field :item_id, :value => @item.id %>
         <%= f.submit "カートに入れる", class: 'btn btn-success ml-3' %>
        <% end %>
       <% end %>
     </div>
    </div>
  </div>
</div>
