<table class="table col">
  <thead bgcolor="#816F5B" class="col-3 border border-dark text-light">
    <tr>
      <td class="col-md-2 border border-dark postcode">郵便番号</td>
      <td class="col-md-5 border border-dark address">住所</td>
      <td class="col-md-2 border border-dark destination">宛名</td>
      <td class="col-md-4 border border-dark btn-space"></td>
    </tr>
  </thead>
  <tbody>
    <% shipping_addresses.each do |shipping_address| %>
      <tr>
        <td class="border border-dark"><%= shipping_address.postal_code %></td>
        <td class="border border-dark"><%= shipping_address.address %></td>
        <td class="border border-dark"><%= shipping_address.name %></td>
        <td class="border border-dark text-center">
          <%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn",style: "background-color: #816F5B; color: #fff;" %>
          <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete, remote: true, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>