<div class="container">
  <h3 class="ml-5">注文情報確認</h3>
  <table class="table table-bordered">
    <tr width="100%" bgcolor="#c0c0c0">
      <th width="10%">注文日</th>
      <th width="40%">配送先</th>
      <th width="15%">注文商品</th>
      <th width="10%">支払金額</th>
      <th width="10%">ステータス</th>
      <th width="15%">注文詳細</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td class="display-table-cell align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
        <td>
          <%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
          <% end %>
        </td>
        <td class="display-table-cell align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
        <td class="display-table-cell align-middle"><%= Order.statuses_i18n[order.status] %></td>
        <td class="display-table-cell align-middle"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </table>
</div>