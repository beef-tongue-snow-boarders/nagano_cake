<div class="container mt-5">
  <div class="row">
      <h3>"<%= @q %>"検索結果</h3>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="d-flex flex-wrap">
        <% @results.each do |item| %>
          <%= link_to item_path(item) do %>
            <%= image_tag item.get_image(300,300), class: "mr-5" %>
            <p class="pt-2"><%= item.name %></p>
            <p>￥<%= item.price.to_s(:delimited) %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>