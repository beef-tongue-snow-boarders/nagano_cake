<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h3>ジャンル編集</h3>
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存",class: 'btn btn-success' %>
        </div>
      <% end %>
  	</div>
  </div>
</div>