<div class='container mx-auto mt-5'>
  <h3 class="mb-5">ジャンル編集</h3>
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-7 px-5 px-sm-0">
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "ジャンル名", class: "col-sm-3" %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "mr-5" %>

          <%= f.submit "変更を保存",class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
  	</div>
  </div>
</div>