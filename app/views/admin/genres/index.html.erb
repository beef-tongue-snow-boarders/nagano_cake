<div class='container mx-auto mt-5'>
  <h3 class="mb-5">ジャンル一覧・追加</h3>
  
  <div class='row mb-5'>
    <div class="col-12 px-8 px-sm-0">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <%= render 'layouts/errors', obj: @genre %>
        <div class="form-group">
          <%= f.label :name, "ジャンル名", class: "col-sm-1" %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "mr-5" %>

          <%= f.submit "新規登録",class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
  	</div>
  </div>
  
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-4 px-5 px-sm-0">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

