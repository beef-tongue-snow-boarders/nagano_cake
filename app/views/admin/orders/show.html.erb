<div class="container">
  <h2 class="mt-5 mb-5 ml-5">注文履歴詳細</h2>
  <div class="row">
    <table class="table table-borderless">
      <tr width="100%">
        <td width="15%"><strong>購入者</strong></td>
        <td width="85%"><%= link_to @order.customer.name_display, admin_path(customer_id: @order.customer_id) %></td>
      </tr>
      <tr>
        <td><strong>注文日</strong></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td><strong>配送先</strong></td>
        <td>
          <%= @order.postal_code + " " + @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <td><strong>支払方法</strong></td>
        <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
      </tr>
      <tr>
        <td><strong>注文ステータス</strong></td>
        <td>
          <div class="text-danger">
            <%= Order.statuses_i18n[@order.status] %>
          </div>
          <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
            <%= f.select :status, Order.statuses.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]} %>
            <%= f.submit "更新", class: "btn btn-success btn-sm" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <tr width="100%" bgcolor="#816F5B" class="text-light">
          <th width="30%">商品名</th>
          <th width="20%">単価(税込)</th>
          <th width="10%">数量</th>
          <th width="10%">小計</th>
          <th width="30%">制作ステータス</th>
        </tr>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td>￥<%= order_detail.price.to_s(:delimited) %></td>
            <td><%= order_detail.amount.to_s(:delimited) %></td>
            <td>￥<%= (order_detail.price * order_detail.amount).to_s(:delimited) %></td>
            <td>
              <div class="text-danger">
                <%= OrderDetail.making_statuses_i18n[order_detail.making_status] %>
              </div>
              <%= form_with model: order_detail, url: admin_order_order_detail_path(order_detail.order, order_detail), method: :patch, local: true do |f| %>
                <%= f.select :making_status, OrderDetail.making_statuses.keys.map{|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
                <%= f.submit "更新", class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-borderless">
        <tr width="100%">
          <td width="50%"><strong>商品合計</strong></td>
          <td width="50%">￥<%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %></td>
        </tr>
        <tr>
          <td><strong>送料</strong></td>
          <td>￥<%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td><strong>請求金額合計</strong></td>
          <td><strong>￥<%= @order.total_payment.to_s(:delimited) %></strong></td>
        </tr>
      </table>
    </div>
  </div>
</div>