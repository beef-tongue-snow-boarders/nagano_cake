<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h3>商品新規登録</h3>

      <% if @item.errors.any? %>
        <%= @item.errors.count %>件のエラーが発生しました
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @item, url: admin_items_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :image, "商品画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "商品説明" %>
          <%= f.text_area :introduction %>
        </div>

        <div class="form-group">
          <%= f.label :genre, "ジャンル" %>
          <%= f.collection_select(:genre_id, @genre, :id, :name) %>
        </div>

        <div class="form-group">
          <%= f.label :price, "税抜き価格" %>
          <%= f.text_field :price %> 円
        </div>

        <div class="form-group">
          <%= f.label "販売ステータス" %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", value: true %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中", value: false %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録",class: 'btn btn-success' %>
        </div>
      <% end %>

  	</div>
  </div>
</div>
