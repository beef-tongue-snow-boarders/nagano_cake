<div class="container col-5 mx-auto mt-5">
  <h2 class="mb-5"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  <%= render 'layouts/errors', obj: @customer %>
  <div class="row">
    <div>
      <%= form_with model:@customer, url: admin_customer_path(@customer), method: :patch, local:true do |f| %>
        <table>
          <tr>
            <td class="pb-3">会員ID</td>
            <td colspan="2"  class="pb-3 pl-3"><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td align="right"></td>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %></td>
            <td class="pl-3" align="right"></td>
            <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control' %></td>
          </tr>
          <tr>
            <td class="pt-3">フリガナ</td>
            <td align="right" class="pt-3"></td>
            <td class="pt-3"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control' %></td>
            <td class="pl-3 pt-3"></td>
            <td class="pt-3"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control' %></td>
          </tr>
          <tr>
            <td colspan="2" class="pt-4"><%= f.label :郵便番号 %></td>
            <td class="pt-3"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control' %></td>
          </tr>
          <tr>
            <td colspan="2" class="pt-4"><%= f.label :住所 %></td>
            <td colspan="3" class="pt-3"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %></td>
          </tr>
          <tr>
            <td colspan="2" class="pt-4"><%= f.label :電話番号 %></td>
            <td class="pt-3"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: 'form-control' %></td>
          </tr>
          <tr>
            <td colspan="2" class="pt-4 pr-3"><%= f.label :メールアドレス %></td>
            <td class="pt-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></td>
          </tr>
          <tr>
            <td colspan="2" class="pt-4"><%= f.label :会員ステータス %></td>
            <td class="pt-4"><%= f.radio_button :is_deleted, false %> <%= f.label :is_deleted, "有効", value: true %>
                             <%= f.radio_button :is_deleted, true %> <%= f.label :is_deleted, "退会", value: false %>
            </td>
          </tr>
          <tr>
            <td align="center" colspan="3" class="pt-4"><%= f.submit "変更を保存", class: 'btn w-30',style: "background-color: #816F5B; color: #fff;" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>