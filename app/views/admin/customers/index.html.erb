<div class='container mx-auto mt-5'>
  <div class="row">
    <h3 class="mb-5">会員一覧</h3>
  </div>
  <div class='row'>
    <div class="col-sm-12 col-md-12 col-lg-12 px-5 px-sm-0">
      <table class="table table-borderless table-hover">
        <thead class="thead-dark">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == true %>
                <td class="text-secondary font-weight-bold">退会</td>
              <% else %>
                <td class="text-success font-weight-bold">有効</td>
              <% end %>
            </tr>
          <% end %>
          <%= paginate @customers, class: 'justify-content-center' %>
        </tbody>
      </table>
    </div>
  </div>
</div>